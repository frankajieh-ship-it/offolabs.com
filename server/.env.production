# OFFO Launch Platform - Production Environment

# Server Configuration
NODE_ENV=production
PORT=5000
CLIENT_URL=https://your-domain.com

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/offo-launch?retryWrites=true&w=majority

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Email Configuration (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@offolaunch.com

# Twilio Configuration (optional - for SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Municipal Government API Integrations (optional)
HEALTH_DEPT_API_URL=https://api.health.gov/permits
HEALTH_DEPT_API_KEY=your_health_dept_api_key

FIRE_DEPT_API_URL=https://api.fire.gov/permits
FIRE_DEPT_API_KEY=your_fire_dept_api_key

BUILDING_DEPT_API_URL=https://api.building.gov/permits
BUILDING_DEPT_API_KEY=your_building_dept_api_key

ZONING_DEPT_API_URL=https://api.zoning.gov/permits
ZONING_DEPT_API_KEY=your_zoning_dept_api_key

# Redis (optional - for caching and sessions)
# REDIS_URL=redis://:password@redis-host:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Logging
LOG_LEVEL=info